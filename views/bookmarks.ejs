<%- include("modules/header"); -%>
<%- include("modules/nav"); -%>
<!-- Content Space -->
<div id="main">
    <h3 id="bmk-title"><%= session.displayname %>'s Bookmarks</h3>
    <div class="post-group">

        <!-- Post -->
        <% bookmarked.forEach(function(post){ %>
        <div class="post-card">
            <a href="/post/<%= post.username %>/<%= post.postID %>-<%= post.title %>">
                <img src="https://storage.googleapis.com/visitour-mp-bucket/<%= post.photo %>" alt="<%= post.title %>">
                <p class="post-title"><%= post.title %></p>
            </a>
            <hr>
            <a href="/profile/<%= post.username %>" class="post-user">
                <img src="https://storage.googleapis.com/visitour-mp-bucket/<%= post.profilepic %>" alt="<%= post.username %>">
                <p><%= post.username %></p>
            </a>
        </div>
        <% }); %>

    </div>
</div>
<%- include("modules/footer"); -%>
